<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2> Errors: </h2>
        <ul>
        <% @song.errors.full_messages.each do |m| %>
          <li> <%= m %></li>
        <% end %>
        </ul>
    </div>
   <% end %>

    Title: <%= f.text_field :title %><br>
    Released?: <%= f.check_box :released %><br><br>
    Released year: <%= f.number_field :release_year %><br><br>
    Artist name: <%= f.text_field :artist_name %><br><br>
    Genre: <%= f.text_field :genre %><br><br>
    <%= f.submit %>
<% end %>